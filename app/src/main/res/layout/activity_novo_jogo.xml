<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/img_pingpong"
        android:layout_width="216dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"

        android:src="@mipmap/pinpong" />

    <TextView
        android:id="@+id/tv_criar_nova_partida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar nova partida"
        android:textColor="@color/texto"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_nome_torneio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Torneio" />

    <EditText
        android:id="@+id/et_jogador_um"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Jogador 1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_jogador_dois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Jogador 2"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="1 Set" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 Sets" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5 Sets" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7 Sets" />
    </RadioGroup>


    <Button
        android:id="@+id/btn_comecar_jogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ComeÃ§ar Partida"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

</LinearLayout>
