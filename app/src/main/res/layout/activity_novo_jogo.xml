<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_nome_torneio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Torneio" />

    <EditText
        android:id="@+id/et_jogador_um"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Jogador 1"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_jogador_dois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Jogador 2"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_comecar_jogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ComeÃ§ar Partida"
        android:layout_marginTop="24dp" />
    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginTop="24dp" />
</LinearLayout>
